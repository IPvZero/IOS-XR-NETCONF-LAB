<config
        xmlns:xc="urn:ietf:params:xml:ns:netconf:base:1.0">
        <ntp xc:operation="replace"
                xmlns="http://cisco.com/ns/yang/Cisco-IOS-XR-ip-ntp-cfg">
                <peer-vrfs>
                        <peer-vrf>
                                <vrf-name>default</vrf-name>
                                <peer-ipv4s>
            {% for n in host.facts.ntp %}

                                        <peer-ipv4>
                                                <address-ipv4>{{ n.server_ip }}</address-ipv4>
                                                <peer-type-ipv4>
                                                        <peer-type>server</peer-type>
                {% if n.preferred == "True" %}

                                                        <preferred-peer/>
                {% endif %}

                                                </peer-type-ipv4>
                                        </peer-ipv4>
        {% endfor %}

                                </peer-ipv4s>
                        </peer-vrf>
                </peer-vrfs>
        </ntp>
</config>
